<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Shipping Dashboard</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
      crossorigin="anonymous"
    />
    <link
      rel="stylesheet"
      href="https://stackpath.bootstrapcdn.com/bootstrap/5.3.0/css/bootstrap.min.css"
    />
    <style>
      .card {
        margin-bottom: 15px;
        padding: 10px;
        box-shadow: 5px 5px 5px grey;
        margin-top: 30px;
      }
      .map-container {
        height: 80vh;
        background-image: url("/images/map.png"); /* Replace with your static map image */
        background-size: cover;
        background-position: center;
      }
      .status-badge {
        display: inline-block;
        padding: 0.5em 1em;
        border-radius: 10px;
        color: #fff;
      }
      .status-in-delivery {
        background-color: green;
      }
      .status-in-transit {
        background-color: blue;
      }
      .status-pending {
        background-color: orange;
      }
      .card-body {
        display: flex;
        align-items: center;
      }

      h6 {
        color: grey;
      }
      .icon {
        width: 34px;
        height: 34px;
      }
      .list-group {
        margin-top: 30px;
        box-shadow: 5px 3px 3px grey;
      }
      .car-icon {
        width: 80px; /* Adjust the size as needed */
        height: auto; /* Maintain aspect ratio */
        border-radius: 5px; /* Border radius of 5 pixels */
        margin-right: 10px; /* Space between the image and text */
      }

      .list-group-item {
        display: flex;
        align-items: center;
      }

      .list-group-item .badge {
        margin-left: auto; /* Push the badge to the right */
      }

      .status-in-delivery {
        background-color: green;
      }
      .status-in-transit {
        background-color: blue;
      }
      .status-pending {
        background-color: orange;
      }
    </style>
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css"
    />
  </head>
  <body>
    <header
      class="d-flex bg-dark flex-wrap justify-content-center py-3 mb-4 border-bottom"
    >
      <a
        href="/"
        class="d-flex align-items-center mb-3 mb-md-0 me-md-auto link-body-emphasis text-decoration-none"
      >
        <img
          class="bi me-2 ms-1"
          src="/images/patafaster icon.png"
          width="50"
          height="50"
          alt="Description of the image"
        />
        <span class="fs-4" style="color: white">Patafasta</span>
      </a>

      <ul id="navbar" class="nav nav-pills">
        <li class="nav-item">
          <a href="/home" class="nav-link active" aria-current="page">Home</a>
        </li>
        <li class="nav-item ms-1">
          <a href="/delivery" class="nav-link active">Deliveries</a>
        </li>
        <li class="nav-item ms-1 me-1">
          <a href="/about" class="nav-link active">About</a>
        </li>
      </ul>
    </header>

    <div class="container-fluid">
      <div class="row">
        <div class="col-md-3">
          <div class="list-group" id="car-list"></div>
        </div>
        <div class="col-md-9">
          <div class="row">
            <div class="col-md-3">
              <div class="card">
                <div class="card-body">
                  <div>
                    <h6>Shipping ID:</h6>
                    <img
                      src="/images/car.png"
                      alt="shipping-icon"
                      class="icon"
                    />
                    <span id="shipping-id"><%= assignments.id %></span>
                  </div>
                </div>
              </div>
            </div>
            <div class="col-md-3">
              <div class="card">
                <div class="card-body">
                  <div>
                    <h6>Driver:</h6>
                    <!-- <img src="/images/user-profile1.png" alt="shipping-icon" class="icon"> -->
                    <span id="driver"><%= assignments.driver %></span>
                  </div>
                </div>
              </div>
            </div>
            <div class="col-md-3">
              <div class="card">
                <div class="card-body">
                  <div>
                    <h6>Car Info:</h6>
                    <img
                      src="/images/car-2.png"
                      alt="shipping-icon"
                      class="icon"
                    />
                    <span id="truck-info"><%= assignments.info %></span>
                  </div>
                </div>
              </div>
            </div>
            <div class="col-md-3">
              <div class="card">
                <div class="card-body">
                  <div>
                    <h6>Destination:</h6>
                    <img
                      src="/images/car-3.png"
                      alt="shipping-icon"
                      class="icon"
                    />
                    <span id="truck-destination"
                      ><%= assignments.destination %></span
                    >
                  </div>
                </div>
              </div>
            </div>
          </div>
          <p>Map Overview</p>
          <div class="map-container mt-3" id="map-container"></div>
          <div
            class="modal fade"
            id="assignModal"
            tabindex="-1"
            aria-labelledby="assignModalLabel"
            aria-hidden="true"
          >
            <div class="modal-dialog">
              <div class="modal-content">
                <div class="modal-header">
                  <h5 class="modal-title" id="assignModalLabel">
                    Assign a Delivery Personnel
                  </h5>
                  <button
                    type="button"
                    class="btn-close"
                    data-bs-dismiss="modal"
                    aria-label="Close"
                  ></button>
                </div>
                <div class="modal-body">
                  <p>
                    Assign the delivery personnel to ensure timely and safe
                    deliveries. Below are the details of the car and the
                    assignment options.
                  </p>
                  <form id="assign-form">
                    <div class="mb-3">
                      <label for="carType" class="form-label">Car Type</label>
                      <input
                        type="text"
                        class="form-control"
                        id="carType"
                        readonly
                      />
                    </div>
                    <div class="mb-3">
                      <label for="carID" class="form-label">Car ID</label>
                      <input
                        type="text"
                        class="form-control"
                        id="carID"
                        readonly
                      />
                    </div>
                    <div class="mb-3">
                      <label for="personnel" class="form-label"
                        >Assign Personnel</label
                      >
                      <select class="form-select" id="personnel">
                        <option value="John Kamau">John Kamau</option>
                        <option value="Jane Isac">Jane Isac</option>
                      </select>
                    </div>
                    <div class="mb-3">
                      <label for="destination" class="form-label"
                        >Destination</label
                      >
                      <select class="form-select" id="destination">
                        <option value="Nairobi">Nairobi</option>
                        <option value="Kisumu">Kisumu</option>
                        <option value="Kitui">Kitui</option>
                        <option value="Eldoret">Eldoret</option>
                      </select>
                    </div>
                  </form>
                  <div class="alert alert-info mt-3" role="alert">
                    Make sure to assign the delivery personnel carefully to
                    ensure smooth operations.
                  </div>
                </div>
                <div class="modal-footer">
                  <button
                    type="button"
                    class="btn btn-secondary"
                    data-bs-dismiss="modal"
                  >
                    Cancel
                  </button>
                  <button
                    type="button"
                    class="btn btn-primary"
                    id="assign-button"
                  >
                    Assign
                  </button>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
    <script>
      const assignments = <%- JSON.stringify(assignments) %>;

      function generateCarList() {
        const carList = document.getElementById("car-list");
        assignments.forEach((car) => {
          const listItem = document.createElement("a");
          listItem.href = "#";
          listItem.className =
            "list-group-item list-group-item-action d-flex align-items-center";
          listItem.dataset.carId = car.id;
          listItem.innerHTML = `
                    <img src="${car.imgSrc}" alt="${car.info}" class="car-icon">
                    <div>
                        <h6>${car.id}</h6>
                        <p>${car.info}</p>
                    </div>
                    <span class="badge ${
                      car.status === "in-delivery"
                        ? "status-in-delivery"
                        : car.status === "in-transit"
                        ? "status-in-transit"
                        : "status-pending"
                    }">${car.type}</span>
                `;
          listItem.addEventListener("click", () => loadCarDetails(car));
          carList.appendChild(listItem);
        });
      }

      function loadCarDetails(car) {
        document.getElementById("shipping-id").textContent = car.id;
        const driverDiv = document.querySelectorAll(".card-body")[1];
        driverDiv.innerHTML = ""; // Clear the existing content

        // Append the new content
        driverDiv.innerHTML = `
                <div>
                    <h6>Driver:</h6>
                 <img src="/images/user-profile1.png" alt="shipping-icon" class="icon">
                </div>
                <button class="btn btn-link p-0 assign-button" data-bs-toggle="modal" data-bs-target="#assignModal">Assign Driver</button>
            `;

        document.getElementById("truck-info").textContent = car.info;
        document.getElementById("truck-destination").textContent =
          car.destination;

        // Update the car type input field in the modal
        document.getElementById("carType").value = car.info;
        document.getElementById("carID").value = car.id;
      }

      document.addEventListener("DOMContentLoaded", () => {
        generateCarList();
        if (assignments.length > 0) {
          loadCarDetails(assignments[0]); // Load the details of the first car
        }
      });
      // assign
      document.getElementById('assign-button').addEventListener('click', async () => {
        const carID = document.getElementById('carID').value;
        const personnel = document.getElementById('personnel').value;
        const destination = document.getElementById('destination').value;

        console.log(`Sending assignment request: id=${carID}, driver=${personnel}, destination=${destination}`);

        const response = await fetch('/assign', {
            method: 'POST',
            headers: {
                'Content-Type': 'application/json'
            },
            body: JSON.stringify({
                id: carID,
                driver: personnel,
                destination: destination
            })
        });

        const result = await response.json();
        if (result.success) {
            alert('Assignment successful!');
            location.reload(); // Refresh the page to see the changes
        } else {
            alert('Assignment failed.');
        }
    });
    </script>

    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
      crossorigin="anonymous"
    ></script>
  </body>
</html>
